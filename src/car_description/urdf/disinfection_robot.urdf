<?xml version="1.0"?>
<robot name="disinfection_robot">

    <!-- Define Materials -->
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>
    <material name="silver">
        <color rgba="0.75 0.75 0.75 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>
    <material name="purple">
        <color rgba="0.5 0 0.5 1"/>
    </material>

    <!-- Base Footprint -->
    <link name="base_footprint">
        <!-- No visual geometry for base_footprint as it's only a reference link -->
    </link>

    <!-- Base Link (colored blue) -->
    <joint name="base_link_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.1"/> <!-- Elevate base_link above base_footprint -->
    </joint>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- Mecanum Wheels (colored black) -->
    <!-- Front Left Wheel -->
    <joint name="wheel_front_left_joint" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_front_left"/>
        <origin xyz="0.25 0.2 -0.05" rpy="1.5708 0 0"/>
    </joint>
    <link name="wheel_front_left">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <!-- Front Right Wheel -->
    <joint name="wheel_front_right_joint" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_front_right"/>
        <origin xyz="0.25 -0.2 -0.05" rpy="1.5708 0 0"/>
    </joint>
    <link name="wheel_front_right">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <!-- Back Left Wheel -->
    <joint name="wheel_back_left_joint" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_back_left"/>
        <origin xyz="-0.25 0.2 -0.05" rpy="1.5708 0 0"/>
    </joint>
    <link name="wheel_back_left">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <!-- Back Right Wheel -->
    <joint name="wheel_back_right_joint" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_back_right"/>
        <origin xyz="-0.25 -0.2 -0.05" rpy="1.5708 0 0"/>
    </joint>
    <link name="wheel_back_right">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <!-- Main Body (colored gray) -->
    <link name="main_body">
        <visual>
            <geometry>
                <box size="0.5 0.3 0.3"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>
    <joint name="main_body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="main_body"/>
        <origin xyz="0 0 0.2"/>
    </joint>

    <!-- Disinfection Device (cylinder, colored silver) -->
    <link name="disinfection_device">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.4"/>
            </geometry>
            <material name="silver"/>
        </visual>
    </link>
    <joint name="disinfection_device_joint" type="fixed">
        <parent link="main_body"/>
        <child link="disinfection_device"/>
        <origin xyz="0 0 0.35"/>
    </joint>

    <!-- Disinfection Nozzle (colored yellow) -->
    <link name="disinfection_nozzle">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.3"/> <!-- Extend the length of the nozzle -->
            </geometry>
            <material name="yellow"/>
        </visual>
    </link>
    <joint name="nozzle_joint" type="fixed">
        <parent link="disinfection_device"/>
        <child link="disinfection_nozzle"/>
        <origin xyz="0.15 0 0.15" rpy="0 1.5708 0"/> <!-- Position adjusted to ensure it connects with the disinfection device -->
    </joint>

    <!-- Lidar (colored red) -->
    <link name="lidar">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.1"/> <!-- Lidar cylinder -->
            </geometry>
            <material name="red"/>
        </visual>
    </link>
    <joint name="lidar_joint" type="fixed">
        <parent link="main_body"/>
        <child link="lidar"/>
        <origin xyz="0.14 0.06 0.2" rpy="0 0 0"/> <!-- Position lidar tightly on top of main_body -->
    </joint>

    <!-- Camera (colored green) -->
    <link name="camera">
        <visual>
            <geometry>
                <box size="0.1 0.05 0.05"/> <!-- Camera box -->
            </geometry>
            <material name="green"/>
        </visual>
    </link>
    <joint name="camera_joint" type="fixed">
        <parent link="main_body"/>
        <child link="camera"/>
        <origin xyz="0.14 -0.1 0.15" rpy="0 0 0"/> <!-- Position camera tightly on top of main_body -->
    </joint>

</robot>









